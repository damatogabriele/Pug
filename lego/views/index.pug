doctype html
html
 head
   title #{title}
   link(rel='stylesheet', href='/css/style.css')
   meta(name="viewport" content="width=device-width, initial-scale=1")
 body
   header.header
         h1 #{title}
   article.container
     each costruzione in mod
       div.costruzione
         div.costruzione-image(style=`background: url('/images/${costruzione.imgSrc}') top center no-repeat; background-size: cover;`)
         h2.costruzione-name
           | #{costruzione.SetName}
         a(href=`/profile?id=${costruzione.SetNumber}`)
           | View Profile
